@{
  Layout = "_Layout";
}
<div class="container">
  @await Html.PartialAsync("_Navbar")
  @model Gruyere.Models.Treat
  <div class="card card-body">
    <h5 class="card-title">Editing: @Model.Name</h5>
    <form action="~/Treat/Edit" method="post">
      @Html.HiddenFor(model => model.TreatId)
      <div class="form-group">
        @Html.TextBoxFor(model => model.Name, new { @class="form-control required", @required="required", @placeholder="{Model.Name}"})
      </div>
      @if(ViewBag.Flavors.Count != 0)
      {
      <div class="form-group">
        @Html.DropDownList("FlavorId", (SelectList)ViewBag.FlavorId, "Select flavor", new { @class = "form-control" })
      </div>
      }
      <button type="submit" class="btn btn-primary">Update</button>
      <a>@Html.ActionLink("Cancel", "Index", "Treat", null, new { @class="btn btn-danger"})</a>
    </form>
  </div>
  @await Html.PartialAsync("_Footer")
</div> 