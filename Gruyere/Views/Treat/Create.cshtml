@{
  Layout = "_Layout";
}
<div class="container">
  @await Html.PartialAsync("_Navbar")
  @model Gruyere.Models.Treat
  <div id="addTreat">
    <div class="card card-body">
      <h5 class="card-title">Add a new Treat</h5>
      <form action="~/Treat/Create" method="post">
        <div class="form-group">
          @Html.TextBoxFor(model => model.Name, new { @class="form-control required", @required="required", @placeholder="Cupcake"})
        </div>
        <button type="submit" class="btn btn-primary">Add Treat</button>
        <a>@Html.ActionLink("Cancel", "Index", "Treat", null, new { @class="btn btn-danger"})</a>
      </form>
    </div>
    @await Html.PartialAsync("_Footer")
  </div>
</div>