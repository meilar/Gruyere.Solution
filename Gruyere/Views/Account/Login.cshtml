@{
  Layout = "_Layout";
}
@using Gruyere.ViewModels
@model LoginViewModel
<div class="container">
  @await Html.PartialAsync("_Navbar")
  <form action="~/Account/Login" method="post">
    <div class="form-group">
      @Html.TextBoxFor(m => m.Email, new { @class="form-control required", @required="required", @placeholder="Enter your email", })
    </div>
    <div class="form-group">
      @Html.TextBoxFor(m => m.Password, new { @class="form-control required", @required="required", @placeholder="Enter your password", })
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
  </form>
  <p>@Html.ActionLink("Create a new account", "Register", "Account", null, new { @class="btn btn-success"})</p>
  @await Html.PartialAsync("_Footer")
</div>