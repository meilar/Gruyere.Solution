@{
  Layout = "_Layout";
}
@using Gruyere.ViewModels
@model RegisterViewModel
<div class="container">
  @await Html.PartialAsync("_Navbar")
    <form action="~/Account/Register" method="post">
    <div class="form-group">
      @Html.TextBoxFor(m => m.Email, new { @class="form-control required", @required="required", @placeholder="Enter your email", })
    </div>
    <div class="form-group">
      @Html.TextBoxFor(m => m.Password, new { @class="form-control required", @required="required", @placeholder="Enter your password", })
    </div>
    <div class="form-group">
      @Html.TextBoxFor(m => m.Password, new { @class="form-control required", @required="required", @placeholder="Confirm your password", })
    </div>
    <button type="submit" class="btn btn-success">Create Account</button>
  </form>
  @await Html.PartialAsync("_Footer")
</div>